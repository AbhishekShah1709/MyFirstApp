<Start>:
    name: "start"
    canvas:
        Color:
            rgb: [10000, 10000, 10000]
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "DHOBIGHAT"
        size_hint: 1,0.2
        font_size: 50
        pos_hint: {"x": 0, "y":0.8}
        color: 10000,10000,10000,1
        bold: True
        canvas.before:
            Color:
                rgba: 2, 0.2, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size


    Button:
        background_color: 10000,10000,10000,1
        text: "Fix Price"
        bold: True
        size_hint: 1,0.12
        pos_hint: {"x": 0,"y":0.6}
        color: 0.9, 0.15, 0.15, 1
        on_release:
            app.root.current = "price"
            root.manager.transition.direction = "left"

    Button:
        background_color: 10000,10000,10000,1
        text: "Add Clothes"
        bold: True
        size_hint: 1,0.12
        color: 0, 0, 0, 1
        pos_hint: {"x": 0,"y":0.48}
        color: 0.9, 0.15, 0.15, 1
        on_release:
            app.root.current = "addclothes"
            root.manager.transition.direction = "left"
    Button:
        background_color: 10000,10000,10000,1
        bold: True
        text: "See history"
        size_hint: 1,0.12
        pos_hint: {"x": 0,"y":0.36}
        color: 0.9, 0.15, 0.15, 1
        on_release:
            app.root.current = "history"
            root.manager.transition.direction = "left"
    Button:
        background_color: 10000,10000,10000,1
        bold: True
        text: "Clear history"
        size_hint: 1,0.12
        pos_hint: {"x": 0,"y":0.24}
        color: 0.9, 0.15, 0.15, 1
        on_release:
            root.clear_history()
            app.root.current = "history"
            root.manager.transition.direction = "left"
    Button:
        background_color: 10000,10000,10000,1
        bold: True
        text: "Pay Money"
        size_hint: 1,0.12
        pos_hint: {"x": 0,"y":0.12}
        color: 0.9, 0.15, 0.15, 1
        on_release:
            app.root.current = "pay"
            root.manager.transition.direction = "left"

    Button:
        background_color: 10000,10000,10000,1
        bold: True
        text: "Show Amount Pending"
        size_hint: 1,0.12
        pos_hint: {"x": 0,"y":0.0}
        color: 0.9, 0.15, 0.15, 1
        on_release:
            app.root.current = "show"
            root.manager.transition.direction = "left"



<Show>:
